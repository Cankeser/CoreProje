@model Portfolio
@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-12">
    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Yeni Proje Ekleme</h3>
                </div>

            </div>
        </div>
        <div class="card-body">
            <form method="post" asp-action="AddPortfolio" asp-controller="Portfolio">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Name">Şirket Adı</label>
                                <input type="text" class="form-control form-control-alternative" asp-for="Name" >
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="ImageUrl">Küçük Resim Yolu</label>
                                <input type="text" class="form-control form-control-alternative" asp-for="ImageUrl" >
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="ImageUrl2">Büyük Resim Yolu</label>
                                <input type="text" class="form-control form-control-alternative" asp-for="ImageUrl2" >
                                <span asp-validation-for="ImageUrl2" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="ProjectUrl">Proje Linki</label>
                                <input type="text" class="form-control" asp-for="ProjectUrl" >
                                <span asp-validation-for="ProjectUrl" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>

