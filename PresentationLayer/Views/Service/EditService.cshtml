@model Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-12">
    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Hizmet Düzenleme Sayfası</h3>
                </div>

            </div>
        </div>
        <div class="card-body">
            <form method="post" asp-action="EditService" asp-controller="Service">
                <div class="pl-lg-4">
                    <div class="row">

                        <div class="col-lg-3">
                            <div class="form-group">
                                <input type="text" hidden class="form-control form-control-alternative" asp-for="ServiceID" required>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Title">Hizmet Adı</label>
                                <input type="text" class="form-control form-control-alternative" asp-for="Title" required>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="ImageUrl">Resim Yolu</label>
                                <input type="text" class="form-control form-control-alternative" asp-for="ImageUrl" required>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>


