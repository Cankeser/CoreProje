@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <div class="row align-items-center">
        <div class="col-8">
            <h3 class="mb-0">Hizmet Listeleme Sayfası</h3>
        </div>
        <div class="col-4 text-right">
            <a asp-action="AddService" asp-controller="Service" class="btn btn-sm btn-primary">Yeni Hizmet EKle</a>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Hizmet Adı</th>
                <th scope="col">Resim Yolu</th>
                <th scope="col">Düzenle</th>
                <th scope="col">Sil</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <th>@i.ServiceID</th>
                    <td>  @i.Title </td>
                    <td>  @i.ImageUrl </td>
                    <td> <a asp-action="EditService" asp-controller="Service" asp-route-id="@i.ServiceID" class="btn btn-success">Düzenle</a></td>
                    <td> <a asp-action="DeleteService" asp-controller="Service" asp-route-id="@i.ServiceID" class="btn btn-danger">Sil</a></td>
                </tr>

            }
        </tbody>
    </table>
</div>