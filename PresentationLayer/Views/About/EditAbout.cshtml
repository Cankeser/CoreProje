@model About
@{
    ViewData["Title"] = "EditAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-12">
    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Hakkımda Düzenleme Sayfası</h3>
                </div>

            </div>
        </div>
        <div class="card-body">
            <form method="post" asp-action="EditAbout" asp-controller="About">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <input type="text" hidden class="form-control form-control-alternative" asp-for="AboutID" required>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Title">Başlık</label>
                                <input type="text" id="input-username" class="form-control form-control-alternative" asp-for="Title" required>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Age">Yaş</label>
                                <input type="number" class="form-control" min="1" max="200" asp-for="Age" required>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Mail">Mail</label>
                                <input type="text" class="form-control form-control-alternative" asp-for="Mail" required>
                            </div>
                        </div> <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Phone">telefon</label>
                                <input type="text" class="form-control form-control-alternative" asp-for="Phone" required>
                            </div>
                        </div> <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Address">Adres</label>
                                <input type="text" class="form-control form-control-alternative" asp-for="Address" required>
                            </div>
                        </div> <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="ImageUrl">Resim Yolu</label>
                                <input type="text" class="form-control form-control-alternative" asp-for="ImageUrl" required>
                            </div>

                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Description">Açıklama</label>
                                <textarea type="text" class="form-control form-control-alternative" asp-for="Description" required rows="8"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>