@model Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-12">
    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Yeni Referans Ekleme</h3>
                </div>

            </div>
        </div>
        <div class="card-body">
            <form method="post" asp-action="AddTestimonial" asp-controller="Testimonial">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Name">AD Soyad</label>
                                <input type="text" class="form-control form-control-alternative" asp-for="Name" required>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="ImageUrl">Resim Yolu</label>
                                <input type="text" class="form-control form-control-alternative" asp-for="ImageUrl" required>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Company">Şirket adı</label>
                                <input type="text" class="form-control form-control-alternative" asp-for="Company" required>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Title">Başlık</label>
                                <input type="text" class="form-control form-control-alternative" asp-for="Title" required>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Comment">Yorum</label>
                                <textarea type="text" class="form-control form-control-alternative" asp-for="Comment" rows="8" required></textarea>
                            </div>
                        </div>

                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>

